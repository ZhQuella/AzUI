    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.0-rc.6",
    "babel-eslint": "^10.1.0",
    "chokidar": "^3.5.1",
    "debug": "^4.3.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.0.0",
